pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/mahii47/NaukariProfile'
            }
        }

        stage('Build') {
            steps {
                dir('NaukariProject') {
                    bat 'mvn clean compile'
                }
            }
        }

        stage('Run Tests') {
            steps {
                dir('NaukariProject') {
                    bat 'mvn test'
                }
            }
        }
    }
}
